<Window x:Class="Retrolink.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно менеджера" Height="300" Width="600">
        
    <Grid>
        <Frame x:Name="ManagerFrame" NavigationUIVisibility="Hidden" />
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Меню">
                <MenuItem Header="Контракты" Click="ContractsMenuItem_Click"/>
                <MenuItem Header="Клиенты" Click="CustomersMenuItem_Click"/>
                <MenuItem Header="Оплата" Click="PaymentsMenuItem_Click"/>
                <MenuItem Header="Тарифы" Click="TariffsMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="ContentArea" Grid.Row="1" Margin="0,30,0,0" />
    </Grid>
</Window>