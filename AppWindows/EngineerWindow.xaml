<Window x:Class="Retrolink.EngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно инженера" Height="300" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Имя сотрудника:"/>
            <Label x:Name="EmployeeNameLabel"/>
            <Label Content="Должность:"/>
            <Label x:Name="EmployeePositionLabel"/>
            <Label Content="Номер телефона:"/>
            <Label x:Name="EmployeePhoneLabel"/>
            <Label Content="Email:"/>
            <Label x:Name="EmployeeEmailLabel"/>
        </StackPanel>
    </Grid>
</Window>