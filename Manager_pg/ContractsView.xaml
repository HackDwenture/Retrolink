      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Retrolink.Manager_pg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContractsView">

    <Grid>
        <StackPanel Margin="10">
            <Label Content="Контракт:"/>
