<Page x:Class="Retrolink.Admin_pg.EmployeesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Список сотрудников">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список сотрудников" Style="{StaticResource PageHeaderStyle}"/>
        <ListView x:Name="EmployeesListView" Grid.Row="1"
                 Style="{StaticResource EmployeesListViewStyle}"
                 ItemContainerStyle="{StaticResource EmployeeListItemStyle}"
                 SelectionMode="Single"
                 MouseDoubleClick="EmployeesListView_MouseDoubleClick">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding EmployeeID}"/>
                    <GridViewColumn Header="Фамилия" Width="120" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Имя" Width="120" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Отчество" Width="120" DisplayMemberBinding="{Binding Patronymic}"/>
                    <GridViewColumn Header="Телефон" Width="120" DisplayMemberBinding="{Binding PhoneNumber}"/>
                    <GridViewColumn Header="Email" Width="180" DisplayMemberBinding="{Binding Email}"/>
                    <GridViewColumn Header="Дата приема" Width="100" 
                                  DisplayMemberBinding="{Binding HireDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Должность" Width="150" DisplayMemberBinding="{Binding Roles.RoleName}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Редактировать" Style="{StaticResource CustomButtonStyle}" 
                    Click="EditButton_Click" Margin="0,0,10,0"/>
            <Button Content="Удалить" Style="{StaticResource CustomButtonStyle}" 
                    Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Page>